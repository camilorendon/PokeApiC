@model pokeApi.Models.Usuario
@{
    ViewData["Title"] = "Register";
}

<form asp-action="registerUser">
    <div class="form-group">
        <input asp-for="Nombre" placeholder="nombre" class="form-control" />
        <span asp-validation-for="Nombre"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Apellido" placeholder="apellido" class="form-control" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Correo" placeholder="correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Contraseña" placeholder="password" type="password" class="form-control" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>


