@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center d-flex justify-content-center align-items-center">
    <h1 class="display-4">PokeAPi</h1>
    <ul>
        @foreach(var pokemon in Model.results){
            <li class="btn btn-primary m-2">
                @pokemon.name
            </li>
        }
    </ul>
    
    @if (Model.PaginaActual==1)
    {
        <li class="btn btn-success">@Html.ActionLink("Anterior", null, new {pagina = 1})</li>
    }
    else
    {
        <li class="btn btn-success"class>@Html.ActionLink("Anterior", null, new {pagina = Model.PaginaActual - 1})</li>
    }
    @if (Model.PaginaActual == 1)
    {
        <li class="btn btn-success">@Html.ActionLink("Siguiente", null, new {pagina = 1 })</li>
    }
    else
    {
        <li class="btn btn-success">@Html.ActionLink("Siguiente", null, new {pagina = Model.PaginaActual + 1})</li>
    }


</div>
